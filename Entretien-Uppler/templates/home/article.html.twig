<div class="album py-5 bg-light">
    <div class="container">

        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
{% for article in articles %}
        <div class="col" >
          <div class="card shadow-sm">
            <img width="100%" height="100%" src={{article.image}} /><rect/>

            <div class="card-body">
            <h5 class="card-title">{{article.titre}}</h5>
                <p class="card-text">{{article.description|u.truncate(150, '...', false)}}</p>
                <div class="d-flex justify-content-between align-items-center">
                    <form action="article/{{article.id}}">
                    <button type="submit" class="btn btn-sm btn-outline-secondary">Voir</button>
                    </form >
                    <small class="text-muted">Publier le{{ article.createdAt|date('d/m/Y') }}</small>
              </div>
            </div>
          </div>
        </div>
{% endfor %}
        </div>
    </div>
</div>